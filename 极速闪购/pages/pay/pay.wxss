.zhifu .address {
  height: 130rpx;
  border-bottom: 4rpx solid skyblue;
  padding: 20rpx;
  font-size: 30rpx;
}
.zhifu .address .shouhuoren {
  display: flex;
  justify-content: space-between;
}
.zhifu .cartContent .cartTitle {
  height: 75rpx;
  font-size: 50rpx;
  color: skyblue;
  padding-left: 20rpx;
  border-bottom: 4rpx solid skyblue;
}
.zhifu .cartContent .cartGoods {
  margin-bottom: 90rpx;
}
.zhifu .cartContent .cartGoods .goodsItem {
  display: flex;
  border-bottom: 1px solid #cfcfcf;
}
.zhifu .cartContent .cartGoods navigator {
  flex: 2;
  padding: 15rpx;
}
.zhifu .cartContent .cartGoods navigator image {
  width: 80%;
}
.zhifu .cartContent .cartGoods .right {
  flex: 4;
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.zhifu .cartContent .cartGoods .right .goodsName {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.zhifu .cartContent .cartGoods .right .bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.zhifu .cartContent .cartGoods .right .bottom .goodsPrice {
  font-size: 40rpx;
  color: red;
}
.zhifu .cartContent .cartGoods .right .bottom .num {
  display: flex;
}
.zhifu .cartContent .cartGoods .right .bottom .num .text {
  text-align: center;
  width: 40rpx;
  height: 40rpx;
  font-size: 35rpx;
}
.zhifu .toolbar {
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #b8b8b8;
  display: flex;
}
.zhifu .toolbar .sum {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  margin-right: 15rpx;
}
.zhifu .toolbar .sum .top {
  display: flex;
  justify-content: center;
  align-items: center;
}
.zhifu .toolbar .sum .top .money {
  font-size: 35rpx;
  color: red;
  font-weight: bolder;
}
.zhifu .toolbar .buy {
  flex: 1;
  background: skyblue;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #fff;
}
