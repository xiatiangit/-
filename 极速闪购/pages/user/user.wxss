page {
  background: #edece8;
}
.user .head {
  height: 45vh;
}
.user .head .userInfo {
  position: relative;
}
.user .head .userInfo .bigBc {
  height: 43vh;
  width: 100%;
  filter: blur(15rpx);
}
.user .head .userInfo .smallBc {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.user .head .userInfo .smallBc image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user .head .userInfo .smallBc .name {
  margin-top: 50rpx;
  color: #0978f7;
  font-size: 35rpx;
}
.user .head .landing {
  position: relative;
  height: 45vh;
  background: #1e90ff;
}
.user .head .landing navigator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 50vw;
  height: 75rpx;
  background: #fff;
  text-align: center;
  line-height: 75rpx;
  font-size: 40rpx;
  border-radius: 10rpx;
}
.user .other .my {
  height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user .other .my .goods {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user .other .my .goods .num {
  color: red;
}
.user .other .myorder {
  margin-top: 20rpx;
}
.user .other .myorder .title {
  height: 70rpx;
  background: #fff;
  line-height: 70rpx;
  font-size: 30rpx;
}
.user .other .myorder .title .text3 {
  margin-left: 20rpx;
}
.user .other .myorder .content {
  margin-top: 5rpx;
  display: flex;
}
.user .other .myorder .content .order {
  flex: 1;
  height: 90rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user .other .myorder .content .order .iconfont {
  color: red;
  font-size: 40rpx;
}
.user .other .address {
  margin-top: 20rpx;
  height: 80rpx;
  background: #fff;
  line-height: 80rpx;
  font-size: 30rpx;
}
.user .other .address .text3 {
  margin-left: 20rpx;
}
.user .other .application {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.user .other .application .service {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user .other .application .service view {
  margin: 0 20rpx;
}
.user .other .application .text4 {
  height: 80rpx;
  background: #fff;
  margin-bottom: 10rpx;
  line-height: 80rpx;
}
.user .other .application .text4 view {
  margin-left: 20rpx;
}
.user .other .share {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  font-weight: normal;
}
